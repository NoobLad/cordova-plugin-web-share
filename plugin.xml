<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="cordova-plugin-web-share"
      version="0.9.0">

    <name>ShareDialogPlugin</name>
    <description>Native sharing dialog for Cordova</description>
    <license>MIT</license>
    <keywords>cordova</keywords>
    <repo>https://github.com/chemerisuk/cordova-plugin-web-share</repo>
    <issue>https://github.com/chemerisuk/cordova-plugin-web-share/issues</issue>

    <js-module src="www/ShareDialog.js" name="ShareDialog">
        <clobbers target="window.navigator.share" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=6.0.0"/>
        <engine name="cordova-android" version=">=6.0.0"/>
        <engine name="cordova-ios" version=">=4.3.0"/>
    </engines>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="ShareDialog">
                <param name="ios-package" value="ShareDialogPlugin" />
                <param name="onload" value="false" />
            </feature>
        </config-file>

        <header-file src="src/ios/ShareDialogPlugin.h" />
        <source-file src="src/ios/ShareDialogPlugin.m" />
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ShareDialog">
                <param name="android-package" value="by.chemerisuk.cordova.ShareDialogPlugin" />
                <param name="onload" value="false" />
            </feature>
        </config-file>

        <source-file src="src/android/ShareDialogPlugin.java"
            target-dir="src/by/chemerisuk/cordova/" />
    </platform>

</plugin>
